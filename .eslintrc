{
  "rules": {
    "max-depth": ["warn", 1],
    "max-params": ["warn", 3]
  },
  "overrides": [
    {
      "files": ["./src/**"],
      "rules": { "max-lines-per-function": ["warn", { "max": 10 }] }
    }
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["prettier/recommend", "airbnb-base"]
}
